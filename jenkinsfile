pipeline{
    agent any
    tools { 
        maven 'maven3'
    }
    stages
       {
            stage("clean")
            {
                steps{
                    sh "mvn clean"
                }
            }
            stage("Build")
            {
                steps{
                    sh "mvn compile"
                }
                
            }
            stage("TEST")
            {
                steps{
                    sh "mvn test"
                }
            }
            stage("package")
            {
                steps{
                    sh "mvn package"
                }
            }
            stage("Deploy")
            {
                steps{
                    sshagent(['yogesh']) {
                    sh "scp -o StrictHostKeyChecking=no  /home/knoldus/var/lib/jenkins/workspace/capstone_prod/target/*.jar ubuntu@172.31.14.196:/home/ubuntu/"            
                 }
                }
            }
            
            
        
    }
}
